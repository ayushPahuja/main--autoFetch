# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,py}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
charset = utf-8
indent_style = tab

# Indentation override for all JS under lib directory
[infrastructure/**.ts]
indent_size = 2
